
@{
    ViewBag.Title = "GCD Algorithm";
    @model Security_Mandatory01.ViewModels.GCDViewModel
}


@using (Html.BeginForm("Calculate", "GCD", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="aValue">A value</label>

        @Html.EditorFor(x => x.a, new { @class = "form-control", id = "aValue" })

    </div>
    <div class="form-group">
        <label for="bValue">B value</label>
        @Html.EditorFor(x => x.b, new { @class = "form-control", id = "bValue" })
    </div>
    <input type="submit" />

}
@if (@Model != null)
{
    <h3>The greatest common divisor is: @Model.result</h3>
}